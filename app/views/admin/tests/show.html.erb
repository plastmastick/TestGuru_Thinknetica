<div class="row justify-content-center mt-3">
  <!--Header-->
  <h2 class="text-center mt-3">
    <%= t('.header', title: @test.title) %>
  </h2>

  <!--Card-->
  <div class="card mt-2">
    <!--Card header-->
    <div class="text-center card-header row justify-content-center">
      <div class="col-auto">
        <strong><%= t('activerecord.attributes.test.level') %>:</strong>
        <%= test_level(@test) %>
      </div>

      <div class="col-auto">
        <strong><%= t('activerecord.attributes.test.category_id') %>:</strong>
        <%= @test.category.title %>
      </div>

      <div class="col-auto">
        <strong><%= t('activerecord.attributes.test.author_id') %>:</strong>
        <%= author_name(@test) %>
      </div>

      <div class="col-auto">
        <strong><%= t('activerecord.attributes.test.timer') %>:</strong>
        <%= @test.timer %>
      </div>

      <div class="col-auto">
        <strong><%= t('activerecord.attributes.test.time') %>:</strong>
        <%= @test.time %>
      </div>
    </div>

    <!--Card footer-->
    <div class="row card-footer">
      <div class="text-center m-1">
        <%= link_to t('helpers.buttons.back'),
                    admin_tests_path,
                    class: 'btn btn-sm btn-outline-primary fw-bold' %>
        <%= link_to t('helpers.buttons.edit'),
                    edit_admin_test_path(@test),
                    class: 'btn btn-sm btn-outline-primary fw-bold' %>
      </div>
    </div>
  </div>

  <!--Questions-->
  <div class="mt-3">
    <h2 class="text-center">
      <%= t('.questions') %>
    </h2>

    <div class="mt-3">
      <%= link_to t('.new_question'),
                  new_admin_test_question_path(@test),
                  class: 'btn btn-primary' %>
    </div>

    <table class="table mt-3">
      <thead class="table-light">
        <tr>
          <th>â„–</th>
          <th><%= t('activerecord.attributes.question.body') %></th>
          <th><%= t('.answers_count') %></th>
          <th colspan="3"><%= t('.actions') %></th>
        </tr>
      </thead>

      <tbody>
        <%= render @test.questions %>
      </tbody>
    </table>
  </div>
</div>
