<div class="row justify-content-center mt-3">

  <div class="col col-md-4">
    <h2 class="text-center"><%= t('.header')%></h2>

    <%= render "shared/errors", resource: resource %>

    <div class="card border-primary mt-4">
      <div class="card-body">
        <%= form_for(resource, as: resource_name,
                     url: registration_path(resource_name),
                     html: { id: "reg-form" }) do |f| %>

          <div class="form-group">
            <div class="mt-3">
              <%= f.label :email %><br />
              <%= f.email_field :email,
                                autofocus: true,
                                autocomplete: "email",
                                class: "form-control",
                                placeholder: 'Enter email'%>
            </div>

            <div class="field">
              <%= f.label :first_name %><br />
              <%= f.text_field :first_name,
                               autofocus: true,
                               autocomplete: "first_name",
                               class: "form-control",
                               placeholder: 'First name'%>
            </div>

            <div class="mt-3">
              <%= f.label :last_name %><br />
              <%= f.text_field :last_name,
                               autofocus: true,
                               autocomplete: "last_name",
                               class: "form-control",
                               placeholder: 'Last name'%>
            </div>

            <div class="password mt-3">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                <em>(<%= t('.characters_minimum', min_password_length: @minimum_password_length) %>)</em>
              <% end %>
              <%= octicon 'alert', class: 'text-danger hide' %>
              <%= octicon 'check-circle-fill', class: 'text-success hide' %>

              <%= f.password_field :password,
                                   autocomplete: "new-password",
                                   class: "form-control",
                                   placeholder: 'Password'%>
            </div>

            <div class="password-confirmation mt-3">
              <%= f.label :password_confirmation %>
              <%= octicon 'alert', class: 'text-danger hide' %>
              <%= octicon 'check-circle-fill', class: 'text-success hide' %>

              <%= f.password_field :password_confirmation,
                                   autocomplete: "new-password",
                                   class: "form-control",
                                   placeholder: 'Password'%>
            </div>

            <div class="actions mt-3 text-center">
              <%= f.submit t('.signup'), class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


