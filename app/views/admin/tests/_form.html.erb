<div class="row justify-content-center mt-3">

  <div class="col col-md-4">
    <%= render "shared/errors", resource: @test %>

    <div class="card border-primary mt-4">
      <div class="card-body">
        <%= form_with model: [:admin, @test], locale: true do |f| %>
          <div class="form-group">
            <div class="mt-3">
              <%= f.label :title %>
              <%= f.text_field :title,
                               autocomplete: "title",
                               class: "form-control",
                               placeholder: t('helpers.placeholder.enter_field',
                                              field: t('activerecord.attributes.test.title'))%>
            </div>

            <div class="mt-3">
              <%= f.label :level %>
              <%= f.text_field :level,
                               autocomplete: "level",
                               class: "form-control",
                               placeholder: t('helpers.placeholder.enter_field',
                                              field: t('activerecord.attributes.test.level'))%>
            </div>

            <div class="mt-3">
              <%= f.label :category_id %>
              <br>
              <%= f.collection_select :category_id, Category.all, :id, :title, prompt: true %>
            </div>

            <div class="mt-3">
              <%= f.label :timer, class: 'form-check-inline' %>
              <%= f.check_box :timer, class: "form-check-reverse" %>
            </div>

            <div class="mt-3">
              <%= f.label :time %>
              <%= f.text_field :time,
                               autocomplete: "time",
                               class: "form-control",
                               placeholder: t('helpers.placeholder.enter_field',
                                              field: t('activerecord.attributes.test.time'))%>
            </div>

            <div class="text-center mt-3">
              <%= f.submit class: 'btn btn-primary' %>
            </div>

            <div class="text-center m-3">
              <%= link_to t('helpers.buttons.back'),
                          admin_tests_path,
                          class: 'btn btn-outline-primary fw-bold',
                          method: :get %>

              <% if request.path.include?('edit') %>
                <%= link_to t('helpers.buttons.show'),
                              admin_test_path(@test),
                              class: 'btn btn-outline-primary fw-bold',
                              method: :get %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
