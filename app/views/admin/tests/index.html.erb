<div class="row justify-content-center mt-3">

  <h2 class="text-center"><%= t('.header') %></h2>

  <p>
    <%= button_to t('.new_test'),
                  new_admin_test_path,
                  method: :get %>
  </p>

  <%= render 'shared/errors', resource: @test %>

  <table id="table-tests" class="table mt-4">
    <thead class="table-light">
      <tr>
        <th scope="col">â„–</th>
        <th class="sort-by-title pointer">
          <%= t('activerecord.attributes.test.title') %>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success' %>
        </th>
        <th scope="col"><%= t('activerecord.attributes.test.level') %></th>
        <th scope="col"><%= t('activerecord.attributes.test.category_id') %></th>
        <th scope="col"><%= t('.questions_count') %></th>
        <th scope="col"><%= t('activerecord.attributes.test.author_id') %></th>
        <th scope="col" colspan="3"><%= t('.actions') %></th>
      </tr>
    </thead>

    <tbody>
    <%= render @tests %>
    </tbody>
  </table>

</div>
