<div class="row justify-content-center mt-3">
  <!--Header-->
  <h2 class="text-center mt-3">
    <%= t('.header', title: @question.test.title) %>
  </h2>

  <!--Card-->
  <div class="card mt-2">
    <!--Card header-->
    <div class="text-center card-header row justify-content-center">
      <div class="col-auto">
        <strong><%= t('activerecord.attributes.question.body') %>:</strong>
        <%= @question.body %>
      </div>
    </div>

    <!--Card footer-->
    <div class="row card-footer">
      <div class="text-center m-1">
        <%= link_to t('helpers.buttons.back'),
                    admin_test_path(@question.test),
                    class: 'btn btn-sm btn-outline-primary fw-bold' %>
        <%= link_to t('helpers.buttons.edit'),
                    edit_admin_question_path(@question),
                    class: 'btn btn-sm btn-outline-primary fw-bold' %>
      </div>
    </div>
  </div>

  <!--Questions-->
  <div class="mt-3">
    <h2 class="text-center">
      <%= t('.answers') %>
    </h2>

    <div class="mt-3">
      <%= link_to t('.new_answer'),
                  new_admin_question_answer_path(@question),
                  class: 'btn btn-primary' %>
    </div>

    <table class="table mt-3">
      <thead class="table-light">
        <tr>
          <th>â„–</th>
          <th><%= t('activerecord.attributes.question.body') %></th>
          <th><%= t('activerecord.attributes.answer.correct') %></th>
          <th colspan="3"><%= t('.actions') %></th>
        </tr>
      </thead>

      <tbody>
        <%= render @question.answers %>
      </tbody>
    </table>
  </div>
</div>

